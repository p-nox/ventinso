# Stage 1: Build React app with Node
FROM node:20-alpine AS build

WORKDIR /app

# Αντιγραφή package.json και package-lock.json για cache των dependencies
COPY package*.json ./

RUN npm install

# Αντιγραφή όλων των αρχείων του project
COPY . .

# Build για production (Vite δημιουργεί φάκελο dist)
RUN npm run build

# Stage 2: Production image με Nginx
FROM nginx:alpine

# Αντιγραφή των build files από το προηγούμενο stage
COPY --from=build /app/dist /usr/share/nginx/html

# Αντικατάσταση default Nginx config για React Router
COPY nginx.conf /etc/nginx/conf.d/default.conf

# Expose port 80
EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
